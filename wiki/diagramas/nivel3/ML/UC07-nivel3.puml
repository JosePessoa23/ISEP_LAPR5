activate CREP
CREP -> CSC : save(camiao)
activate CSC
deactivate CSC
deactivate CREP
CS -> CM : camiaoDTO = createCamiaoDTO(camiao)
activate CM
CM -> CD : create()
activate CD
deactivate CD
deactivate CM
CS -> CC : camiaoDTO
deactivate CS
CC -> RR: camiaoDTO
deactivate CC

