deactivate CC
CS -> AL : get()

ref over AL
 ./MGA/UC05-nivel3.puml
end ref
activate AL
deactivate CS
AL -> CS : listaEntregas
deactivate AL
activate CS
CS -> CC : listaEntregas
deactivate CS
activate CC
CC -> CU : listaEntregas
deactivate CC
