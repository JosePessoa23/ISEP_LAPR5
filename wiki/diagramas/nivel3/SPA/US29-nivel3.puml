deactivate RC
RS -> AL : get()

ref over AL
 ./ML/US29-nivel3.puml
end ref
activate AL
deactivate RS
AL -> RS : listaViagens
deactivate AL
activate RS
RS -> RC : listaViagens
deactivate RS
activate RC
RC -> RUI : listaViagens
deactivate RC
RUI -> GL: Mostra as Viagens presentes no sistema ao utilizador

deactivate RUI

